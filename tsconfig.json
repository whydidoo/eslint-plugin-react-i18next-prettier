{
  "compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"sourceMap": false,
		"outDir": "lib",
    	"rootDir": "./src",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"removeComments": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
	]
}